/* miniprogram/pages/order-confirmation/order-confirmation.wxss */
page {
  height: 100%;
}
.wrapper {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.address {
  width: 100%;
  height: 200rpx;
  border-bottom: 20rpx solid #ccc;
}

.product-option {
  background-color: #fff;
  border-bottom: 20rpx solid #ccc;

}

.product-uppperpart {
  padding-left: 50rpx;
  padding-right: 50rpx;
  display: flex;
  align-items: center;
}

.product-icon {
  width: 100rpx;
  height: 100rpx;
}

.product-centerpart {

  padding-left: 50rpx;
  padding-right: 50rpx;
  display: flex;
  flex-direction: column;
}

.product-name {}

.product-introduce {}

.product-qualitypart {
  display: flex;
  justify-content: space-between;
}

.product-price {}

.product-quality {}

.product-properties {}

.product-properties-name {}

.product-properties-val {}

.product-properties-valItem {

  margin: 20rpx;
  border: 1rpx solid #ccc;
}

.selected {
  background-color: #00ffff;
}

.product-price {
  background-color: #fff;
}
.product-price-row {
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width:100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.payment-area {
  margin-top: auto;
  background-color: #fff;
  
}

.payment-btn {
  margin: 0;
  padding: 0 !important;
}

.lineThrough {
  text-decoration: line-through;
}